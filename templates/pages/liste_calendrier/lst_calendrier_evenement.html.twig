{% extends 'base.html.twig' %}

{% block head %}
	<script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
{% endblock %}

{% block title %}Waou - Liste Évenement à Souhaiter
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('list_calendrier') }}
{% endblock %}
{% block body %}
	<section class="container-list-calendrier element-to-scroll">
		<div class="container-list row">
			<a class="button-add" href="{{ path('app_lst_calendrier_evenement_add') }}">Ajouter</a>
			<table class="table table-striped">
				<thead>
					<tr class="four-columns">
						<th scope="col">Événements</th>
						<th scope="col">Date</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for entry in lstCalendrierEvenement %}
						<tr class="four-columns">
							<th scope="row">{{ entry.evenement }}</th>
							<td>{{ entry.jourEvenement|date('d-m-Y') }}</td>
							<td>
								<a class="container-relative" href="{{ path('app_valider_evenement', {'id': entry.id}) }}" onclick="return confirm('Voulez-vous vraiment valider cet evenement ?')">
									<img style="width: 8%;" src="{{ asset('img/icon-valider-bleu.png') }}">
									<div class="info-bubble">Valider</div>
								</a>
								<a class="container-relative delete-button" href="{{ path('app_lst_calendrier_evenement_delete', {'id': entry.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer cet evenement ?')">
									<img src="{{ asset('img/icon-croix.png') }}" alt="Supprimer">
									<div class="info-bubble">Supprimer</div>
								</a>
								<a class="container-relative" href="{{ path('app_lst_calendrier_evenement_modify', {'id' : entry.id}) }}">
									<img style="width: 10%;" src="{{ asset('img/icon-modifier.png') }}" alt="modifier">
									<div class="info-bubble">Modifier</div>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}
