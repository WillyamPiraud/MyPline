{% extends 'base.html.twig' %}

{% block title %}Waou -
	{{ (app.request.get('_route') == 'app_lst_calendrier_choses_a_faire_add' ? 'Ajouter' : 'Modifier') }}
	une Choses A Faire
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('list_calendrier') }}
	{{ encore_entry_link_tags('login') }}
{% endblock %}
{% block body %}
	{{ form_start(form_calendrier_choses_a_faire, {'attr': {'class': 'element-to-scroll mb-5'}}) }}
	<div class="row container-principal-form">
		<div class="col-8 mx-auto container-intro">
			<div class="col-form" style="width: 100%;">
				<h1>{{ (app.request.get('_route') == 'app_lst_calendrier_choses_a_faire_add' ? 'Créer' : 'Modifier') }}
					un Rappel</h1>
			</div>
			<div class="col-form">
				{{ form_label(form_calendrier_choses_a_faire.intitule) }}
				{{ form_widget(form_calendrier_choses_a_faire.intitule) }}
				{{ form_errors(form_calendrier_choses_a_faire.intitule) }}
			</div>
			<div class="col-form">
				{{ form_label(form_calendrier_choses_a_faire.date_butoir) }}
				{{ form_widget(form_calendrier_choses_a_faire.date_butoir) }}
				{{ form_errors(form_calendrier_choses_a_faire.date_butoir) }}
			</div>
			<div class="col-form">
				{{ form_label(form_calendrier_choses_a_faire.date_prevue) }}
				{{ form_widget(form_calendrier_choses_a_faire.date_prevue) }}
				{{ form_errors(form_calendrier_choses_a_faire.date_prevue) }}
			</div>
			<div class="col-form">
				{{ form_label(form_calendrier_choses_a_faire.temps_prevue) }}
				{{ form_widget(form_calendrier_choses_a_faire.temps_prevue) }}
				{{ form_errors(form_calendrier_choses_a_faire.temps_prevue) }}
			</div>
			<button type="submit" class="button-submit btn-sub mb-3">{{ (app.request.get('_route') == 'app_lst_calendrier_choses_a_faire_add' ? 'Créer' : 'Modifier') }}</button>
		</div>
	</div>
	{{ form_end(form_calendrier_choses_a_faire) }}
{% endblock %}
