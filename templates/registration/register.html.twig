					<form method="post">
						<h2 class="title">Se connecter</h2>
						<div class="input-field">
							<i class="ri-mail-line"></i>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="E-mail">
						</div>
						<div class="input-field">
							<i class="ri-lock-line"></i>
							<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
						</div>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
						<input type="submit" value="Se Connecter" class="btn solid">
					</form>

					{% else %}
				{% endif %}
				{% if app.request.get('_route') == 'app_register' %}
					{{ form_start(registrationForm, {'attr': {'class': 'sign-up-form'}}) }}
					<h2 class="title">Créer sont compte</h2>
					<div class="input-field">
						<i class="ri-mail-line"></i>
						{{ form_widget(registrationForm.email) }}
						{{ form_errors(registrationForm.email) }}
					</div>
					<div class="input-field">
						<i class="ri-user-line"></i>
						{{ form_widget(registrationForm.prenom) }}
						{{ form_errors(registrationForm.prenom) }}
					</div>
					<div class="input-field">
						<i class="ri-user-line"></i>
						{{ form_widget(registrationForm.nom) }}
						{{ form_errors(registrationForm.nom) }}
					</div>
					<div class="input-field">
						<i class="ri-phone-fill"></i>
						{{ form_widget(registrationForm.telephone) }}
						{{ form_errors(registrationForm.telephone) }}
					</div>
					<div class="input-field">
						<i class="ri-lock-line"></i>
						{{ form_widget(registrationForm.plainPassword) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>
					<input type="submit" value="Créer" class="btn solid">
					{{ form_end(registrationForm) }}
					{% else %}
				{% endif %}
			</div>
		</div>
		<div class="panels-container">
			<div class="panel left-panel">
				<div class="content">
					<h3>Nouveau ici ?</h3>
					<p>Rejoingez-nous pour changer votre vie actuel et atteindre vos objectifs pour devenir heureu !</p>
					<button onclick="window.location='{{ path('app_register') }}'" class="btn transparent" id="sign-up-btn" style="margin: 0;
